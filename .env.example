# COPY THIS TO .env AND FILL IN YOUR VALUES
# NEVER COMMIT .env TO GIT

# Discord (Required)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_HERE

# Mode
MODE=SIMULATION
ENV=development

# API Keys (For future use)
DRIFT_PRIVATE_KEY=
BINANCE_API_KEY=
BINANCE_SECRET_KEY=

# Database
DATABASE_URL=sqlite:///data/arb_bot.db

# Optional Monitoring
SENTRY_DSN=

# Test Network Credentials
# Get testnet API from: https://testnet.binance.vision/
BINANCE_TESTNET_API_KEY=
BINANCE_TESTNET_SECRET=

# Solana wallet private key (base58 encoded)
# Generate new: solana-keygen new
# Get devnet SOL: https://solfaucet.com
SOLANA_DEVNET_PRIVATE_KEY=

# Enable actual test network trading
ENABLE_TESTNET_TRADING=false
